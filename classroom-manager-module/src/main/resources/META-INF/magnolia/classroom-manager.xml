<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>classroom-manager</name>
    <displayName>${project.name}</displayName>
    <description>${project.description}</description>
    <class>bitcare.ClassroomManager</class>
    <versionHandler>bitcare.setup.ClassroomManagerVersionHandler</versionHandler>
    <version>0.0.1</version>

    <dependencies>
        <dependency>
            <name>core</name>
            <version>5.3.7/*</version>
        </dependency>
        <dependency>
            <name>public-user-registration</name>
            <version>2.4.2/*</version>
        </dependency>
        <!-- Add other dependencies here, e.g the standard-templating-kit, or the multisite module with the enterprise edition. -->
    </dependencies>
    <repositories>
        <repository>
            <name>magnolia</name>
            <workspaces>
                <workspace>courses</workspace>
            </workspaces>
            <nodeTypeFile>/mgnl-nodetypes/classroom-manager-nodetypes.xml</nodeTypeFile>
        </repository>
    </repositories>
</module>